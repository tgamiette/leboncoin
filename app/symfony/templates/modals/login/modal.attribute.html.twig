<!-- Add Attribut Modal -->
<div class="modal fade" id="addAttributeModal" tabindex="-1" aria-labelledby="addAttributeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Close -->
      <button type="button" class="btn btn-close" data-bs-dismiss="modal"><i class="icon-close"></i> <span class="visually-hidden">Fermer</span></button>

      <!-- Content -->
      <div class="modal-body">
        <h5 class="modal-title"> Ajouter un attribut </h5>

        {% include 'modals/modal.error.html.twig' %}
        
        {{ form_start(attributeForm, {'attr': {'class': 'default-form modal-form'}}) }}
          <fieldset>
            <div class="row">
              <div class="col-sm-6">
                <div class="mb-3">
                  {{ form_row(attributeForm.attribute) }}
                </div>
              </div>
              <div class="col-sm-6">
                <div class="mb-3">
                  {{ form_row(attributeForm.version) }}
                </div>
              </div>
            </div>
          </fieldset>

          <div class="default-form-actions">
            <div class="default-form-info">
              <div class="help-text">
                * Champs obligatoires
              </div>
            </div>

            <div class="default-form-btns">
              <button type="button" class="btn btn-grey-20" data-bs-dismiss="modal">Annuler</button>
              <button type="submit" class="btn btn-success btn-icon-left"><i class="icon-check-round"></i>Enregistrer</button>
            </div>

          </div>
        {{ form_row(attributeForm._token) }}
        {{ form_end(attributeForm, {render_rest: false}) }}
      </div>
    </div>
  </div>
</div>