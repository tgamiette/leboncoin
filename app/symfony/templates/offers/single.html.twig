{% extends 'base.html.twig' %}

{% block body %}
    <div class="c-offer" style="display: flex; flex-direction: row;align-items: flex-start; justify-content: space-between; margin: 50px 0;gap: 60px;">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 100%;">
          <div class="carousel-inner">
            {% for file in offer.files %}
                {% if loop.index == 1 %}
                    <div class="carousel-item active" style="max-height: 400px;">
                      <img class="d-block w-100"src="{{asset(file.path)}}" alt="First slide">
                    </div>
                {% else %}
                    <div class="carousel-item" style="max-height: 400px;">
                      <img class="d-block w-100"src="{{asset(file.path)}}" alt="other slide">
                    </div>
                {% endif %}
            {% endfor %}
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>



        <div style="width: 100%;">
            <h3>{{ offer.title }}</h3>
            <p>{{ offer.description }}</p>
            <p>{{ offer.price }}â‚¬</p>

            <div class="">
                <h6>Vendeur :</h6>
                    <H6>{{ offer.user.pseudo }}</H6>
                    <a class="btn btn-primary" href="/user/{{ offer.user.id }}">Voir le vendeur</a>
            </div>
        </div>



    </div>

    {% include 'questions/question.html.twig' %}

    <div style="margin-bottom: 30px;">
        {% if userLogin %}
            {% if userLogin.id == offer.user.id %}
                <h5>Supprimer votre annonce</h5>
                <a href="{{ path('app_offer_delete_id', {id: offer.id}) }}">
                    <button type="button" class="btn btn-primary">Supprimer</button>
                </a>
            {% endif %}
        {% endif %}
    </div>



{% endblock %}
