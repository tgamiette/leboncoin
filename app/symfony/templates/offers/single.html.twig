{% extends 'base.html.twig' %}

{% block body %}
    <div class="c-offer" style="display: flex; flex-direction: row;align-items: flex-start; justify-content: space-between; margin: 50px 0;gap: 60px;">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 100%;">
          <div class="carousel-inner">
            {% for file in offer.files %}
                {% if loop.index == 1 %}
                    <div class="carousel-item active" style="max-height: 400px;height:100%;">
                      <img class="d-block w-100" <img class="card-img-top" src="{{asset(file.path)|default('https://images.unsplash.com/photo-1517142089942-ba376ce32a2e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80')}}" alt="First slide">
                    </div>
                {% else %}
                    <div class="carousel-item" style="max-height: 400px;;height:100%;">
                      <img class="d-block w-100" <img class="card-img-top" src="{{asset(file.path)|default('https://images.unsplash.com/photo-1517142089942-ba376ce32a2e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80')}}" alt="other slide">
                    </div>
                {% endif %}
            {% endfor %}
            {% if offer.status == 0 %}
                <span class="badge text-bg-danger">Vendu</span>
            {% else %}
                <span class="badge text-bg-success">A vendre</span>
            {% endif %}
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div style="width: 100%;">
            <h3>{{ offer.title }}</h3>
            <p>{{ offer.description }}</p>
            <p>{{ offer.price }}â‚¬</p>

            <div class="">
                <h6>Vendeur :</h6>
                    <H6>{{ offer.user.pseudo }}</H6>
                    <a class="btn btn-primary" href="/user/{{ offer.user.id }}">Voir le vendeur</a>
            </div>
        </div>
    </div>

    {% include 'questions/question.html.twig' %}

    <div style="display: flex; flex-direction: row;">
        <div style="margin: 0 15px;">
            {% if userLogin %}
                {% if userLogin.id == offer.user.id %}
                    <p>Supprimer mon annonce</p>
                    <a href="{{ path('app_offer_delete_id', {id: offer.id}) }}">
                        <button type="button" class="btn btn-warning">Supprimer</button>
                    </a>
                {% endif %}
            {% endif %}
        </div>

        <div style="margin: 0 15px;">
            {% if userLogin %}
                {% if userLogin.id == offer.user.id %}
                    <p>Modifier mon annonce</p>
                    <a href="{{ path('app_offer_update_id', {id: offer.id}) }}">
                        <button type="button" class="btn btn-warning">Modifier</button>
                    </a>
                {% endif %}
            {% endif %}
        </div>
    </div>

{% endblock %}
