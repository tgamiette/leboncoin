{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="card"
     style="margin: 20px 0;padding: 20px; border: none; border-bottom: 1px solid #00000020;border-radius: 0; display: flex; flex-direction: row; justify-content: space-between;align-items: flex-start">
    <div style="display: flex; flex-direction: row; justify-content: flex-start; align-items: center; gap: 20px;border-radius:0;">
        <div class="avatar avatar-xl">
            <img class="rounded-circle"
                 src="{{user.avatar|default('http://cdn.onlinewebfonts.com/svg/img_568656.png')}}" style="width:130px"/>
        </div>
        <div style="display: flex; flex-direction: column; justify-content: flex-start; align-items: flex-start;">
            <H6>{{ user.pseudo }}</H6>
            <H6>Nom : {{ user.firstname }} {{ user.lastname }}</H6>
            <H6>Email : {{ user.email }} </H6>
            <H6>Address : {{ user.address }} </H6>

            <div class="">
                <H6>Note :</H6>
                <p style="font-size: 1.5rem;">{{ user.rate ? user.rate : 0}}<img src="https://img.icons8.com/ios/452/thumb-up--v1.png" style="width: 30px;" alt=""></p>
            </div>

        </div>


    </div>
    <div class="">
        {{ form_start(rateForm) }}
        {{ form_widget(rateForm) }}

        <button type="submit" class="btn btn-warning" name="button">Ajouter un pouce</button>
        {{ form_end(rateForm) }}
    </div>
</div>

<div class="card" style="margin: 20px 0;padding: 20px; border: none; border-bottom: 1px solid #00000020;border-radius: 0;">
    <h3>Les annonces de {{ user.pseudo }}</h3>
    <div style="display: grid; grid-template-columns: repeat(4, 1fr); grid-gap: 20px; margin: 20px 0;">
        {% for offer in user.offers %}
            <div class="card" style="width: 18rem">
                {% for file in offer.files %}
                    {% if loop.index == 1 and file %}
                        <img class="card-img-top" src="{{asset(file.path)}}" style="min-height: 200px;" alt="Card image cap">
                    {% endif %}
                {% endfor %}

                <div class="card-body">
                    <h5 class="card-title">{{offer.title}}</h5>
                    <p class="card-text">{{offer.description}}</p>
                    <a href="/offers/{{offer.id}}" class="btn btn-warning">Voir l'annonce</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
