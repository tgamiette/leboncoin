{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}

    {{ form_start(registrationForm) }}
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Inscription</h2>
                            <p class="text-white-50 mb-5">Veuillez renseignez vos informations</p>
                                {#                                ///email #}
                                <div class="form-outline form-white mb-4">
                                    {#                                    <label>{{ registrationForm.email.label }}</label> #}
                                    {{ form_label(registrationForm.email, 'app.login.email', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control'}}) }}

                                    <small>{{ form_help(registrationForm.email) }}</small>

                                    <div class="form-error">
                                        {{ form_errors(registrationForm.email) }}
                                    </div>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    {{ form_label(registrationForm.pseudo, 'app.login.pseudo', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(registrationForm.pseudo,{'attr': {'class': 'form-control'}}) }}

                                    <small>{{ form_help(registrationForm.pseudo) }}</small>

                                    <div class="form-error">
                                        {{ form_errors(registrationForm.pseudo) }}
                                    </div>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    {{ form_label(registrationForm.lastname, 'app.login.lastname', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(registrationForm.lastname,{'attr': {'class': 'form-control'}}) }}

                                    <small>{{ form_help(registrationForm.lastname) }}</small>

                                    <div class="form-error">
                                        {{ form_errors(registrationForm.lastname) }}
                                    </div>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    {#                                    <label>{{ registrationForm.email.label }}</label> #}
                                    {{ form_label(registrationForm.firstname, 'app.login.firstname', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}

                                    <small>{{ form_help(registrationForm.firstname) }}</small>

                                    <div class="form-error">
                                        {{ form_errors(registrationForm.firstname) }}
                                    </div>
                                </div>

                            <div class="form-outline form-white mb-4">
                                {{ form_label(registrationForm.plainPassword, 'app.login.password'|trans, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control'}}) }}

                                <small>{{ form_help(registrationForm.plainPassword) }}</small>

                                <div class="form-error">
                                    {{ form_errors(registrationForm.plainPassword) }}
                                </div>
                            </div>
                            <p class="small mb-5 pb-lg-2">
                                {{ form_row(registrationForm.agreeTerms) }}
                            </p>
                            <button type="submit"
                                    class="btn btn-outline-light btn-lg px-5">{{ 'app.menu.login'|trans }}</button>
                            <div class="d-flex justify-content-center mt-4 pt-1"
                                 style="display : flex;align-items : center;justify-content : center;">

                                {#                                        <a href="#!" class="text-white"><i style="color: dodgerblue" class="fab fa-facebook-f fa-lg"></i></a> #}
                                <a href="#!" class="text-white"><img width=" 40" height="40"
                                                                     src="{{ asset('images/Facebook-f_Logo-Blue-Logo.wine.svg') }}"></a>
                                <a href="#!" class="text-white"><img width=" 25" height="25"
                                                                     src="{{ asset('images/Google__G__Logo.svg') }}"></a>
                            </div>
                        </div>
                        <div>
                            <p class="mb-0"><a href='{{ path("app_register") }}'
                                               class='text-white-50 fw-bold'> {{ 'app.login.not_account'|trans }}</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
